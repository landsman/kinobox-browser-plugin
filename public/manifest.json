{
  "name": "kinobox-browser-extension",
  "short_name": "kinobox.cz",
  "description": "Redirect from CSFD to Kinobox",
  "version": "1.0.2",
  "homepage_url": "https://github.com/landsman/kinobox-browser-plugin",
  "developer": {
    "name": "Michal Landsman",
    "url": "https://www.instuit.cz"
  },
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.csfd.cz/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}